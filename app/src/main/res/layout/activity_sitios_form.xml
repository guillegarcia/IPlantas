<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/titulo_sitio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sitio"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_sitio"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del sitio"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_nombre"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitud"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_lat"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_lng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitud"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/butt_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:elevation="2dp"
            android:onClick="guardar"
            android:text="guardar"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_lng"
            app:layout_constraintRight_toLeftOf="@+id/butt_borrar"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/butt_borrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:onClick="borrar"
            app:layout_constraintLeft_toRightOf="@+id/butt_guardar"
            app:layout_constraintTop_toTopOf="@+id/butt_guardar"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
