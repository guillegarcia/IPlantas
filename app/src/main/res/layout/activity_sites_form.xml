<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iplantas.iplantas.activity.SitesFormActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="4dp"/>

    </android.support.design.widget.AppBarLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="16dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/title_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sitio"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_site"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del sitio"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_name"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitud"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:transitionGroup="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_lat"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/form_lng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitud"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="14dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:elevation="2dp"
            android:onClick="save"
            android:text="guardar"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_lng"
            app:layout_constraintRight_toLeftOf="@+id/button_erase"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/button_erase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:onClick="erase"
            app:layout_constraintLeft_toRightOf="@+id/button_save"
            app:layout_constraintTop_toTopOf="@+id/button_save"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
