<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_plant_border">

        <ImageView
            android:id="@+id/list_plant_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            android:src="@drawable/img_plant_one" />

        <TextView
            android:id="@+id/list_plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/list_plant_image"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="4dp"
            android:text="Plant Name" />
        <TextView
            android:id="@+id/list_plant_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/list_plant_image"
            android:layout_below="@+id/list_plant_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_margin="4dp"
            android:text="InformaciÃ³n adicional de la planta" />
    </RelativeLayout>
</android.support.v7.widget.CardView>